<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <LangVersion>10.0</LangVersion>
    <Authors>Aptacode</Authors>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>1.0.34</Version>
    <AssemblyVersion>1.0.34</AssemblyVersion>
    <FileVersion>1.0.34</FileVersion>
    <RepositoryUrl>https://github.com/Aptacode/AppFramework</RepositoryUrl>
    <Description>High performance .NET 6 application development framework library for Blazor</Description>
    <PackageProjectUrl>https://github.com/Aptacode/AppFramework</PackageProjectUrl>
    <AssemblyName>Aptacode.AppFramework</AssemblyName>
    <RootNamespace>Aptacode.AppFramework</RootNamespace>
    <PackageIcon>Logo.png</PackageIcon>
    <ApplicationIcon>Logo.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <SupportedPlatform Include="browser" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Aptacode.BlazorCanvas" Version="1.0.13" />
    <PackageReference Include="Aptacode.Geometry" Version="1.0.44" />
    <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="6.0.2" />
    <PackageReference Include="Aptacode.CSharp.Common.Utilities" Version="1.0.0.30" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\Resources\Images\Logo.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

</Project>