@inherits SceneControllerViewBase

<div @ref="Container"
      tabindex="0"
      @onkeydown="KeyDown"
      @onkeyup="KeyUp"
      style="cursor: @(ViewModel.Cursor);"
      @onmousemove="MouseMove"
      @onmousedown="MouseDown"
      @onmouseup="MouseUp"
      @onmouseout="MouseOut">

    @foreach (var scene in ViewModel.Scenes)
    {
        <SceneView ViewModel="scene"></SceneView>
    }
</div>